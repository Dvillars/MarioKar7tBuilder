@{
    ViewData["Title"] = "Edit your kart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MarioKart7Builder.Models.Kart

<h2>Edit</h2>
<hr />
<h4>Edit this Kart: @Html.DisplayFor(model => model.name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.id)
    <div class="form-group">
        @Html.LabelFor(model => model.name)
        @Html.TextBoxFor(model => model.name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.userId)
        @Html.TextBoxFor(model => model.userId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.characterId)
        @Html.TextBoxFor(model => model.characterId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.bodyId)
        @Html.TextBoxFor(model => model.bodyId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.tireId)
        @Html.TextBoxFor(model => model.tireId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.gliderId)
        @Html.TextBoxFor(model => model.gliderId)
    </div>
    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to View", "Details", new { id = Model.id })</p>